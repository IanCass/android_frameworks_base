<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/config_window_layout"
    android:layout_width="200dp"
    android:layout_height="200dp"
    android:background="@drawable/bg" >
    
    <ImageButton 
        android:id="@+id/imgbtX"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/vertical"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        />
      <ImageButton 
        android:id="@+id/imgbtY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/horizontal"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        />  
    <ImageButton 
        android:id="@+id/imgbtXY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rotation"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        />
      <ImageButton 
        android:id="@+id/imgbtOK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ok"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        />         
</RelativeLayout>
